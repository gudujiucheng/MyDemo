<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jishu055.mydemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.view.DrawableActivity" />
        <activity android:name=".activity.view.ListItemActivity" />
        <activity android:name=".activity.view.OptimizationActivity_01" />
        <!-- 通过设置主题设置背景 优化显示效果 -->
        <activity
            android:name=".activity.view.OptimizationActivity_02"
            android:theme="@style/Theme.Default.NoActionBar" />
        <activity
            android:name=".activity.BaseActivity"
            android:label="@string/title_activity_base"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.json.JsonActivity" />
        <activity android:name=".animation.LayoutAnimationActivity" />
        <activity android:name=".activity.WebActivity" />
        <activity android:name=".activity.designpattern.ObserverPatternActivity" />
        <activity android:name=".activity.java.enumtest.EnumActivity" />
        <activity android:name=".activity.runnable.ThreadActivity" />
        <activity android:name=".activity.update.UpdateActivity" />
        <activity android:name=".activity.view.customview.CustomViewActivity" />
        <activity android:name=".activity.view.keyboard.KeyBoardActivity" />
        <activity android:name=".activity.view.shape.ShapeActivity"></activity>
    </application>

</manifest>